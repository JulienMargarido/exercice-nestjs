{
  "name": "exercice-back-template",
  "version": "0.0.1",
  "description": "Exercice NestJS/TS avec AWS Lambda, Dynamo, CDK, webpack",
  "private": true,
  "license": "UNLICENSED",
  "keywords": [
    "nestjs",
    "lambda",
    "dynamodb",
    "cdk",
    "fastify",
    "typescript"
  ],
  "scripts": {
    "build": "npm run build:web && npm run build:ingest",
    "build:web": "nest build web --webpackPath webpack/webpack-web.prod.js",
    "build:ingest": "nest build ingest --webpackPath webpack/webpack-ingest.prod.js",
    "start:web:dev": "LOCAL_ENV=true WEBPACK_ENV=hmr nest build web --watch",
    "start:ingest:dev": "LOCAL_ENV=true nest build ingest",
    "start:web:prod": "npm run build:web && LOCAL_ENV=true node dist/apps/web/web-lambda",
    "start:ingest:prod": "npm run build:ingest && LOCAL_ENV=true node dist/apps/ingest/ingest-lambda",
    "test": "jest",
    "test:web": "jest web",
    "test:ingest": "jest ingest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:web:e2e": "jest --config apps/web/e2e/jest-e2e.json",
    "test:ingest:e2e": "jest --config ./apps/ingest/e2e/jest-e2e.json",
    "lint:check": "eslint \"{apps,libs,test,cdk,envs,webpack}/**/*.ts\"",
    "lint:fix": "eslint \"{apps,libs,test,envs,webpack}/**/*.ts\" --fix",
    "format:check": "prettier --check \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:fix": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.758.0",
    "@aws-sdk/credential-provider-node": "^3.758.0",
    "@aws-sdk/lib-dynamodb": "^3.758.0",
    "@fastify/aws-lambda": "^5.1.4",
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.11",
    "@nestjs/platform-fastify": "^11.0.11",
    "@nestjs/swagger": "^11.0.6",
    "aws-jwt-verify": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^5.2.1",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@faker-js/faker": "^9.7.0",
    "@golevelup/ts-jest": "^0.6.1",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.11",
    "@types/aws-lambda": "^8.10.147",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "run-script-webpack-plugin": "^0.2.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "webpack": "^5.98.0",
    "webpack-merge": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "rootDir": ".",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "^@/shared-configuration(|/.*)$": "<rootDir>/libs/shared-configuration/src/$1",
      "^@/domain(|/.*)$": "<rootDir>/libs/domain/src/$1",
      "^@/persistence(|/.*)$": "<rootDir>/libs/persistence/src/$1",
      "^@/service(|/.*)$": "<rootDir>/libs/service/src/$1"
    }
  }
}
